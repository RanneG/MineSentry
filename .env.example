# MineSentry Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# Database
DATABASE_URL=sqlite:///minesentry.db
# For PostgreSQL: postgresql://user:password@localhost/minesentry

# Bitcoin RPC Configuration
# Get these from your bitcoin.conf file
BITCOIN_RPC_URL=http://127.0.0.1:8332
BITCOIN_RPC_USER=your_rpc_username
BITCOIN_RPC_PASSWORD=your_rpc_password

# For Testnet
# BITCOIN_RPC_URL=http://127.0.0.1:18332
# BITCOIN_RPC_USER=your_testnet_rpc_username
# BITCOIN_RPC_PASSWORD=your_testnet_rpc_password

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Bounty Contract Configuration (optional)
# Comma-separated list of Bitcoin addresses that can approve payments
# BOUNTY_CONTRACT_SIGNERS=bc1qsigner1...,bc1qsigner2...,bc1qsigner3...
# BOUNTY_MIN_SIGNATURES=2

# Lightning Network (optional, for future use)
# LIGHTNING_RPC_URL=http://127.0.0.1:10009
# LIGHTNING_MACAROON_PATH=/path/to/admin.macaroon
# LIGHTNING_TLS_CERT_PATH=/path/to/tls.cert
